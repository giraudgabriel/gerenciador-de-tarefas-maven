<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="task_manager">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>br.gov.sp.fatec.projetomaven.entity.Usuario</class>
        <class>br.gov.sp.fatec.projetomaven.entity.Desenvolvedor</class>
        <class>br.gov.sp.fatec.projetomaven.entity.DesenvolvedorBackend</class>
        <class>br.gov.sp.fatec.projetomaven.entity.DesenvolvedorFrontend</class>
        <class>br.gov.sp.fatec.projetomaven.entity.Gerente</class>
        <class>br.gov.sp.fatec.projetomaven.entity.Tarefa</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/task_manager?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="user" />
            <property name="javax.persistence.jdbc.password" value="tnc" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="validate" />
        </properties>
    </persistence-unit>
</persistence>